{
  "name": "cloudphone-platform",
  "version": "1.0.0",
  "description": "Cloud Phone Platform",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss}\""
  },
  "pnpm": {
    "overrides": {
      "typeorm": "0.3.20"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@nestjs/core",
        "@nestjs/common"
      ],
      "allowAny": [
        "@nestjs/*"
      ]
    }
  },
  "devDependencies": {
    "prettier": "^3.6.2"
  }
}
