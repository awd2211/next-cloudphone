{
  "dashboard": {
    "id": null,
    "uid": "cloudphone-devices",
    "title": "云手机平台 - 设备监控",
    "tags": ["cloudphone", "devices"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "type": "stat",
        "title": "设备总数",
        "targets": [
          {
            "expr": "sum(cloudphone_devices_total)",
            "legendFormat": "总数",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 50, "color": "yellow" },
                { "value": 100, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "type": "stat",
        "title": "运行中设备",
        "targets": [
          {
            "expr": "sum(cloudphone_devices_by_status{status=\"running\"})",
            "legendFormat": "运行中",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "thresholds": {
              "mode": "absolute",
              "steps": [{ "value": null, "color": "green" }]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "type": "stat",
        "title": "故障设备",
        "targets": [
          {
            "expr": "sum(cloudphone_devices_by_status{status=\"error\"})",
            "legendFormat": "故障",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 1, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "type": "stat",
        "title": "ADB 连接数",
        "targets": [
          {
            "expr": "cloudphone_adb_connections",
            "legendFormat": "连接数",
            "refId": "A"
          }
        ]
      },
      {
        "id": 5,
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "type": "timeseries",
        "title": "设备 CPU 使用率",
        "targets": [
          {
            "expr": "cloudphone_device_cpu_usage_percent",
            "legendFormat": "{{device_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": { "mode": "palette-classic" },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 80, "color": "yellow" },
                { "value": 95, "color": "red" }
              ]
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 6,
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "type": "timeseries",
        "title": "设备内存使用量",
        "targets": [
          {
            "expr": "cloudphone_device_memory_usage_mb",
            "legendFormat": "{{device_id}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 7,
        "gridPos": { "x": 0, "y": 12, "w": 12, "h": 8 },
        "type": "timeseries",
        "title": "网络流量（接收）",
        "targets": [
          {
            "expr": "rate(cloudphone_device_network_rx_bytes_total[5m])",
            "legendFormat": "{{device_id}} RX",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 8,
        "gridPos": { "x": 12, "y": 12, "w": 12, "h": 8 },
        "type": "timeseries",
        "title": "网络流量（发送）",
        "targets": [
          {
            "expr": "rate(cloudphone_device_network_tx_bytes_total[5m])",
            "legendFormat": "{{device_id}} TX",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 9,
        "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 },
        "type": "piechart",
        "title": "设备状态分布",
        "targets": [
          {
            "expr": "cloudphone_devices_by_status",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "donut"
        }
      },
      {
        "id": 10,
        "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 },
        "type": "heatmap",
        "title": "操作耗时分布",
        "targets": [
          {
            "expr": "sum(rate(cloudphone_operation_duration_seconds_bucket[5m])) by (le, operation)",
            "legendFormat": "{{operation}}",
            "format": "heatmap",
            "refId": "A"
          }
        ],
        "options": {
          "calculate": true,
          "calculation": {
            "xBuckets": {
              "mode": "size",
              "value": "10s"
            }
          },
          "color": {
            "mode": "scheme",
            "scheme": "Spectral"
          }
        }
      },
      {
        "id": 11,
        "gridPos": { "x": 0, "y": 28, "w": 12, "h": 8 },
        "type": "timeseries",
        "title": "操作错误率",
        "targets": [
          {
            "expr": "rate(cloudphone_operation_errors_total[5m])",
            "legendFormat": "{{operation}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": { "mode": "palette-classic" }
          }
        }
      },
      {
        "id": 12,
        "gridPos": { "x": 12, "y": 28, "w": 12, "h": 8 },
        "type": "histogram",
        "title": "批量操作规模分布",
        "targets": [
          {
            "expr": "sum(rate(cloudphone_batch_operation_size_bucket[5m])) by (le, operation_type)",
            "legendFormat": "{{operation_type}}",
            "format": "heatmap",
            "refId": "A"
          }
        ]
      }
    ],
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "hide": 0,
          "includeAll": false,
          "multi": false
        },
        {
          "name": "tenant",
          "type": "query",
          "datasource": "${datasource}",
          "query": "label_values(cloudphone_devices_total, tenant_id)",
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "refresh": 1
        }
      ]
    },
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    }
  },
  "overwrite": true
}
