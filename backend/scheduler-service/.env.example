# Scheduler Service 环境变量配置示例  
# 复制此文件为 .env 并填入实际值

# ===== 运行环境 =====
ENVIRONMENT=development
PORT=3004

# ===== 数据库配置 =====
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=cloudphone_scheduler

# ===== Redis 配置 =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== 调度配置 =====
SCHEDULING_STRATEGY=weighted_round_robin  # round_robin | least_load | weighted_round_robin
ENABLE_AUTO_SCALING=true
MIN_INSTANCES=1
MAX_INSTANCES=10

# ===== 资源阈值 =====
CPU_THRESHOLD=80  # 百分比
MEMORY_THRESHOLD=85  # 百分比
DISK_THRESHOLD=90  # 百分比

# ===== 健康检查 =====
HEALTH_CHECK_INTERVAL=30  # 秒
UNHEALTHY_THRESHOLD=3  # 连续失败次数

# ===== 服务地址 =====
DEVICE_SERVICE_URL=http://localhost:3002

# ===== 日志配置 =====
LOG_LEVEL=INFO
LOG_FORMAT=json
