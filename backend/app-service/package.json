{
  "name": "app-service",
  "version": "1.0.0",
  "description": "云手机平台 - 应用服务",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "migrate:status": "atlas migrate status --env local",
    "migrate:apply": "atlas migrate apply --env local",
    "migrate:diff": "atlas migrate diff --env local",
    "migrate:lint": "atlas migrate lint --env local",
    "migrate:validate": "atlas migrate validate --env local",
    "schema:inspect": "atlas schema inspect --url \"postgres://postgres:postgres@localhost:5432/cloudphone?sslmode=disable\" --format '{{ sql . }}' > schema.sql",
    "schema:apply": "atlas schema apply --env local --auto-approve"
  },
  "dependencies": {
    "@cloudphone/shared": "workspace:*",
    "@golevelup/nestjs-rabbitmq": "^6.0.2",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.1.7",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.7",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.7",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/typeorm": "^11.0.0",
    "@types/passport-jwt": "^4.0.1",
    "adm-zip": "^0.5.16",
    "apk-parser3": "^0.1.7",
    "app-info-parser": "^1.1.6",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "minio": "^8.0.6",
    "multer": "^2.0.2",
    "nest-winston": "^1.10.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.27",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.7",
    "@types/adm-zip": "^0.5.7",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
