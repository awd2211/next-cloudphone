# Server Configuration
NODE_ENV=development
PORT=30008

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=cloudphone_sms
DB_SYNCHRONIZE=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:admin123@localhost:5672/cloudphone

# JWT Configuration (must match other services)
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Consul Configuration
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_SERVICE_NAME=sms-receive-service
CONSUL_SERVICE_PORT=30008

# SMS Platform API Keys (get from platform websites)
# SMS-Activate: https://sms-activate.io (Main platform)
SMS_ACTIVATE_API_KEY=

# 5sim: https://5sim.net (Backup platform 1)
FIVESIM_API_TOKEN=

# SMSPool: https://www.smspool.net (Backup platform 2)
SMSPOOL_API_KEY=

# Platform Configuration
DEFAULT_PROVIDER=sms-activate
ENABLE_PLATFORM_FALLBACK=true
ENABLE_NUMBER_POOL=true
ENABLE_SMART_ROUTING=true

# Number Pool Configuration
POOL_PREFILL_ENABLED=true
POOL_MIN_SIZE=5
POOL_MAX_SIZE=20
POOL_REFILL_THRESHOLD=0.3
POOL_TTL_HOURS=2

# Polling Configuration
POLLING_INITIAL_DELAY_MS=1000
POLLING_MAX_DELAY_MS=60000
POLLING_BACKOFF_FACTOR=1.5
POLLING_MAX_ATTEMPTS=60
POLLING_TIMEOUT_MINUTES=10

# Cost & Billing Configuration
ENABLE_COST_TRACKING=true
ENABLE_AUTO_REFUND=true
COST_ALERT_THRESHOLD_USD=100

# Balance Alert Configuration
BALANCE_CHECK_INTERVAL_HOURS=1
BALANCE_ALERT_THRESHOLD_USD=10
BALANCE_CRITICAL_THRESHOLD_USD=5

# Alert Channels (comma-separated)
ALERT_CHANNELS=email
ALERT_EMAIL_RECIPIENTS=admin@example.com
ALERT_SMS_RECIPIENTS=
ALERT_DINGTALK_WEBHOOK=
ALERT_WECHAT_WEBHOOK=

# Logging Configuration
LOG_LEVEL=debug
LOG_PRETTY=true

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
CONCURRENT_REQUESTS_LIMIT=50

# Feature Flags
ENABLE_WEBHOOK_SUPPORT=false
ENABLE_RENTAL_NUMBERS=true
ENABLE_BATCH_OPERATIONS=true
