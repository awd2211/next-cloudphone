# ========================================
# Server Configuration
# ========================================
NODE_ENV=development
PORT=30008

# ========================================
# Database Configuration (PostgreSQL)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=cloudphone_sms
DB_SYNCHRONIZE=false

# ========================================
# Redis Configuration
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ========================================
# RabbitMQ Configuration
# ========================================
RABBITMQ_URL=amqp://admin:admin123@localhost:5672/cloudphone

# ========================================
# JWT Configuration
# ========================================
# Important: Must match all other services
JWT_SECRET=your-secret-key-change-in-production-use-at-least-32-characters
JWT_EXPIRES_IN=24h

# ========================================
# Consul Service Discovery
# ========================================
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_SERVICE_NAME=sms-receive-service
CONSUL_SERVICE_PORT=30008

# ========================================
# SMS Platform API Keys
# ========================================
# SMS-Activate: https://sms-activate.io
SMS_ACTIVATE_API_KEY=your_sms_activate_api_key_here
SMS_ACTIVATE_BASE_URL=https://api.sms-activate.org/stubs/handler_api.php

# 5sim: https://5sim.net
FIVESIM_API_KEY=your_5sim_api_key_here
FIVESIM_BASE_URL=https://5sim.net/v1

# ========================================
# Platform Selection Configuration
# ========================================
# Strategy: cost-optimized, reliability-first, balanced, round-robin
PLATFORM_SELECTION_STRATEGY=balanced

# ========================================
# Number Pool Configuration
# ========================================
NUMBER_POOL_ENABLED=true
POOL_MIN_SIZE=5
POOL_MAX_SIZE=20
POOL_REFILL_THRESHOLD=3

# ========================================
# Polling Configuration
# ========================================
# Batch size for SMS polling
POLLING_BATCH_SIZE=50

# Maximum active numbers to poll at once
MAX_ACTIVE_NUMBERS=500

# ========================================
# Health Check Configuration
# ========================================
# Health check runs every minute (configured in code)
HEALTH_CHECK_ENABLED=true

# ========================================
# Logging Configuration
# ========================================
# Log levels: error, warn, log, debug, verbose
LOG_LEVEL=debug

# ========================================
# Prometheus Metrics
# ========================================
METRICS_ENABLED=true

# ========================================
# Request Configuration
# ========================================
# Maximum retry attempts for provider API calls
MAX_RETRY_ATTEMPTS=3

# Default number expiration time in minutes
DEFAULT_NUMBER_EXPIRATION=20

# ========================================
# CORS Configuration
# ========================================
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# ========================================
# Development & Testing
# ========================================
# Enable test mode (don't call actual provider APIs)
TEST_MODE=false
