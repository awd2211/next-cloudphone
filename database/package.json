{
  "name": "cloudphone-database",
  "version": "1.0.0",
  "description": "Cloud Phone Platform Database Management",
  "scripts": {
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d config/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d config/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d config/data-source.ts",
    "schema:sync": "npm run typeorm -- schema:sync -d config/data-source.ts",
    "schema:drop": "npm run typeorm -- schema:drop -d config/data-source.ts",
    "seed": "ts-node seeds/seed.ts",
    "init": "npm run schema:sync && npm run seed",
    "reset": "npm run schema:drop && npm run init"
  },
  "dependencies": {
    "typeorm": "^0.3.27",
    "pg": "^8.16.3",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.4.7",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@types/bcrypt": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
