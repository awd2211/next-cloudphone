{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client", "node"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Linting - 渐进式启用 strict 模式 */
    "strict": false, // 暂时保持 false，逐个启用子选项

    /* Strict 模式子选项 - Phase 1: 渐进式启用 */
    "noImplicitAny": false, // 🔄 暂时关闭（Week 1）- Week 2-3 渐进式修复
    "strictNullChecks": false, // 🔄 暂时关闭（Week 1）- Week 2-3 渐进式修复
    "strictFunctionTypes": true, // ✅ 严格的函数类型检查
    "strictBindCallApply": true, // ✅ 严格的 bind/call/apply 检查

    /* Strict 模式子选项 - Phase 2: 待启用 */
    // "strictPropertyInitialization": true, // 🔄 严格的属性初始化
    // "noImplicitThis": true, // 🔄 禁止隐式 this
    // "alwaysStrict": true, // 🔄 总是使用严格模式

    /* 其他严格检查 */
    "noUnusedLocals": false, // 🔄 暂时关闭（Week 1）- Week 2-3 渐进式修复
    "noUnusedParameters": false, // 🔄 暂时关闭（Week 1）- Week 2-3 渐进式修复
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false, // 🔄 暂时关闭 - 修复后重新启用
    "noUncheckedIndexedAccess": false, // 🔄 暂时关闭（Week 1）- Week 2-3 渐进式修复

    "erasableSyntaxOnly": false,
    "noUncheckedSideEffectImports": false,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "src/tests/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
