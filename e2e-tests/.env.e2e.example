# E2E Test Environment Configuration (Example)
# Copy this file to .env.test and adjust values as needed

# =============================================================================
# API Service Endpoints
# =============================================================================

# API Gateway (if using)
API_GATEWAY_URL=http://localhost:30000

# Microservices
USER_SERVICE_URL=http://localhost:30001
DEVICE_SERVICE_URL=http://localhost:30002
APP_SERVICE_URL=http://localhost:30003
SCHEDULER_SERVICE_URL=http://localhost:30004
BILLING_SERVICE_URL=http://localhost:30005
NOTIFICATION_SERVICE_URL=http://localhost:30006

# =============================================================================
# Database Configuration (for cleanup operations)
# =============================================================================

DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=cloudphone

# Individual service databases
DB_USER_DATABASE=cloudphone_user
DB_DEVICE_DATABASE=cloudphone_device
DB_BILLING_DATABASE=cloudphone_billing

# =============================================================================
# Test User Credentials
# =============================================================================

# Regular test user
TEST_USER_EMAIL=e2e.test@cloudphone.com
TEST_USER_PASSWORD=E2ETestPassword123!
TEST_USER_USERNAME=e2e_test_user

# Admin test user
TEST_ADMIN_EMAIL=e2e.admin@cloudphone.com
TEST_ADMIN_PASSWORD=E2EAdminPassword123!
TEST_ADMIN_USERNAME=e2e_admin_user

# =============================================================================
# Test Configuration
# =============================================================================

# Cleanup test data after tests complete
E2E_CLEANUP_AFTER_TESTS=true

# Wait for services to be healthy before running tests
E2E_WAIT_FOR_SERVICES=true

# Default timeout for tests (milliseconds)
E2E_TIMEOUT=30000

# Retry configuration
E2E_MAX_RETRIES=3
E2E_RETRY_DELAY=2000

# =============================================================================
# Infrastructure Services (for E2E environment)
# =============================================================================

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin123@localhost:5672/cloudphone
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_VHOST=cloudphone
RABBITMQ_USERNAME=admin
RABBITMQ_PASSWORD=admin123

# MinIO
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false

# Consul
CONSUL_HOST=localhost
CONSUL_PORT=8500

# =============================================================================
# Test Data Configuration
# =============================================================================

# Test device configuration
TEST_DEVICE_CPU_CORES=2
TEST_DEVICE_MEMORY_MB=4096
TEST_DEVICE_RESOLUTION=1080x1920
TEST_DEVICE_ANDROID_VERSION=11

# Test billing configuration
TEST_INITIAL_BALANCE=10000
TEST_RECHARGE_AMOUNT=1000
TEST_CONSUME_AMOUNT=100

# =============================================================================
# Logging and Debugging
# =============================================================================

# Log level (error, warn, info, debug)
E2E_LOG_LEVEL=info

# Enable verbose test output
E2E_VERBOSE=true

# Enable API request/response logging
E2E_LOG_API_CALLS=false

# =============================================================================
# CI/CD Configuration
# =============================================================================

# Running in CI environment
CI=false

# GitHub Actions specific
GITHUB_ACTIONS=false

# Generate test reports
E2E_GENERATE_REPORTS=true
E2E_REPORT_DIR=./test-results

# =============================================================================
# Performance Testing
# =============================================================================

# Number of concurrent test users
E2E_CONCURRENT_USERS=1

# Load test duration (seconds)
E2E_LOAD_TEST_DURATION=60

# =============================================================================
# Docker Configuration (for E2E environment)
# =============================================================================

# Use isolated E2E Docker environment
E2E_USE_DOCKER_ENV=false

# Docker compose file for E2E
E2E_DOCKER_COMPOSE_FILE=docker-compose.e2e.yml

# =============================================================================
# Feature Flags
# =============================================================================

# Enable specific test suites
E2E_RUN_USER_TESTS=true
E2E_RUN_DEVICE_TESTS=true
E2E_RUN_BILLING_TESTS=true
E2E_RUN_APP_TESTS=false
E2E_RUN_NOTIFICATION_TESTS=false

# Enable performance tests
E2E_RUN_PERFORMANCE_TESTS=false

# Enable security tests
E2E_RUN_SECURITY_TESTS=false
